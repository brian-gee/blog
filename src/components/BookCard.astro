---
import Badge from '../components/Badge.astro';

interface Props {
  title: string;
  img: string;
  author: string;
  year: number;
  reading?: boolean;
  link: string;
  loading?: 'lazy' | 'eager';
}
const {
  title,
  img,
  author,
  year,
  reading = false,
  link,
  loading = 'lazy',
} = Astro.props;
---

<li class="list-none w-full">
  <a href={link} target="_blank">
    <article class="flex gap-10">
      <div class="overflow-hidden rounded-lg">
        <img src={img} alt={title} class="w-40" />
      </div>
      <div class="w-full pt-6">
        <h2 class="mb-1 space-x-2 text-xl font-semibold">
          {title}
        </h2>
        <div class="mb-2 flex flex-col gap-2">
          <p class="space-x-0.5 text-sm">
            <span>{author}</span>{' '}
            <span>&middot;</span>
            <span>{year}</span>
          </p>
          {reading && <Badge text="reading" color="indigo" />}
        </div>
      </div>
    </article>
  </a>
</li>
