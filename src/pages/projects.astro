---
import DefaultLayout from '../layouts/DefaultLayout.astro';
import ProjectCard from '../components/ProjectCard.astro';
const projects = [
  {
    name: 'Personal Portfolio',
    url: 'https://github.com/brian-gee/blog',
    description: 'My personal portfolio (the website your on right now)',
    languages: ['HTML', 'TailwindCSS', 'TypeScript', 'React'],
    role: 'author',
  },
  {
    name: 'Astro Trades',
    url: 'https://github.com/brian-gee/astro-trades',
    description:
      'A personal day trading tracker built using Astro and Firebase.',
    languages: ['HTML', 'TailwindCSS', 'TypeScript', 'Firebase'],
    role: 'author',
  },
];
---

<DefaultLayout title="Projects">
  <h1 class="text-center text-4xl pb-10 sm:pb-20">Projects</h1>
  <div class="grid gap-10 mx-auto max-w-xl xl:max-w-4xl mt-12">
    <ul class="grid grid-cols-1 xl:grid-cols-2 gap-8">
      {
        projects.map((project) => (
          <ProjectCard
            name={project.name}
            description={project.description}
            role={project.role}
            url={project.url}
            languages={project.languages}
          />
        ))
      }
    </ul>
  </div>
</DefaultLayout>
