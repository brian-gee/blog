---
import DefaultLayout from '../layouts/DefaultLayout.astro';
import BookCard from '../components/BookCard.astro';
import { books } from '../content/books.js';
---

<DefaultLayout title="Bookshelf">
  <h1 class="text-center text-4xl pb-10 sm:pb-20">Bookshelf</h1>
  <div class="grid gap-10 mx-auto max-w-xl xl:max-w-7xl mt-12">
    <ul class="grid grid-cols-1 xl:grid-cols-2 gap-8">
      {
        books.map((book) => (
          <BookCard
            title={book.title}
            author={book.author}
            comment={book.comment}
            year={book.year}
            img={book.img}
            loading={book.loading as 'lazy' | 'eager'}
            link={book.link}
            reading={book.reading}
          />
        ))
      }
    </ul>
  </div>
</DefaultLayout>
